{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "productTitle": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "unique": true
    },
    "productPrice": {
      "type": "integer",
      "required": true
    },
    "productQuantity": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "productImages": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "productSlug": {
      "type": "uid",
      "targetField": "productTitle",
      "required": true
    },
    "productDescription": {
      "type": "richtext",
      "required": true
    },
    "productSize": {
      "type": "json",
      "required": false
    },
    "productThumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "productOrginalPrice": {
      "type": "integer"
    }
  }
}
